<body>

    <h1>Editing Book</h1>

    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <div class="forms">
        <%= form_with model: @book, url: up_book_path, method: :patch do |f| %> <!--updateアクションにデータ送る-->

            <div class="form">
                <label>Title</label>
                <%= f.text_field :title %>
            </div>

            <div class="form">
                <label>Body</label>
                <%= f.text_area :body %>
            </div>

            <input type="submit" value="Update Book" class="btn">

          <% end %>
        </div>

        <span><%= link_to "Show", "/books/#{@book.id}" %></span>
        <span><%= link_to "Back", "/books" %></span>

    </body>





